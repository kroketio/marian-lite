prefix="@CMAKE_INSTALL_PREFIX@"
exec_prefix="${prefix}"
libdir="${prefix}/lib"
includedir_base="${prefix}/include/marian-lite"
includedir_3rd="${prefix}/include/marian-lite/3rd_party"
includedir_proto="${prefix}/include/marian-lite/3rd_party/proto"

includedir="${includedir_base};${includedir_3rd};${includedir_proto}"

Name: @PROJECT_NAME@
Description: @CMAKE_PROJECT_DESCRIPTION@
URL: @CMAKE_PROJECT_HOMEPAGE_URL@
Version: @PROJECT_VERSION@
Requires: @pc_req_public@
Requires.private: @pc_req_private@
Libs: -L${libdir} -lmarian-lite -lpathie-cpp @pkgconfiglibs@
Cflags: -I${includedir} @pkgconfigcflags@
